{
  "compilerOptions": {
    "target": "es2020",
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["./hardhat.config.ts", "./test/**/*.ts", "./ignition/**/*.ts", "./scripts/**/*.ts"],
  "exclude": ["node_modules", "artifacts", "cache"]
}

